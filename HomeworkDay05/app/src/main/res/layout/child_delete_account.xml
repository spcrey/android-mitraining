<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/delete_account"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/area_delete_account"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintStart_toEndOf="@+id/area_unban_account"
        app:layout_constraintTop_toBottomOf="@+id/area_reset_password"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="108dp"
        android:layout_height="90dp"
        />

    <TextView
        android:id="@+id/icon_delete_account"
        android:background="@color/teal_200"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/area_delete_account"
        app:layout_constraintEnd_toEndOf="@+id/area_delete_account"
        app:layout_constraintTop_toTopOf="@+id/area_delete_account"
        />

    <TextView
        android:id="@+id/text_delete_account"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="注销账号"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/area_delete_account"
        app:layout_constraintEnd_toEndOf="@+id/area_delete_account"
        app:layout_constraintTop_toBottomOf="@+id/icon_delete_account"
        />

</merge>