<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pageFragmentContainerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/toPageFragmentHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/toPageFragmentHome"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:textSize="18sp"
        android:text="home"
        android:background="@color/coral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toPageFragmentMine"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/toPageFragmentMine"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:textSize="18sp"
        android:background="@color/gray"
        android:text="mine"
        app:layout_constraintStart_toEndOf="@+id/toPageFragmentHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>