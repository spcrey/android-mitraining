<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="24sp"
        android:text="main activity"
        android:gravity="center"
        android:layout_margin="6dp"
        android:background="@drawable/rounded_rectangle_coral_bg"
        />

    <Button
        android:id="@+id/toHomework"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="homework activity"
        android:layout_margin="@dimen/marginPadding"
        android:background="@drawable/rounded_button_bg"
        />

    <Button
        android:id="@+id/toJavaActivity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="java activity"
        android:layout_margin="@dimen/marginPadding"
        android:background="@drawable/rounded_button_bg"
        />

    <Button
        android:id="@+id/toKotlinActivity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="kotlin activity"
        android:layout_margin="@dimen/marginPadding"
        android:background="@drawable/rounded_button_bg"
        />

</LinearLayout>