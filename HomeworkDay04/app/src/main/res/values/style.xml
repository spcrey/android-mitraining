<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_text">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="style_background">
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="style_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/title</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_main_activity_button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>