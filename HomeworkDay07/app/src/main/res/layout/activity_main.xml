<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="main activity"
        />

    <Button
        android:id="@+id/to_homework_tween_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="homework: tween animation"
        />

    <Button
        android:id="@+id/to_homework_property_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="homework: property animation"
        />

    <Button
        android:id="@+id/to_test_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test activity"
        />


    <FrameLayout
        android:id="@+id/test_fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>