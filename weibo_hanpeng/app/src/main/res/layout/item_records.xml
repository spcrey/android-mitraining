<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_white_r12dp"
    android:id="@+id/layout"
    >

    <View
        android:id="@+id/bg_title"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="36dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/bg_title"
        app:layout_constraintTop_toTopOf="@+id/bg_title"
        app:layout_constraintBottom_toBottomOf="@+id/bg_title"
        />

    <TextView
        android:id="@+id/text_username"
        android:layout_width="112dp"
        android:layout_height="21dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/img_avatar"
        app:layout_constraintTop_toTopOf="@+id/bg_title"
        app:layout_constraintBottom_toBottomOf="@+id/bg_title"
        />

    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="@+id/bg_title"
        app:layout_constraintTop_toTopOf="@+id/bg_title"
        app:layout_constraintBottom_toBottomOf="@+id/bg_title"
        />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:lineSpacingMultiplier="1.5"
        android:maxLines="6"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_title"
        />

    <View
        android:id="@+id/bg_like_comment"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/ic_like"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="54dp"
        app:layout_constraintStart_toStartOf="@+id/bg_like_comment"
        app:layout_constraintTop_toTopOf="@+id/bg_like_comment"
        app:layout_constraintBottom_toBottomOf="@+id/bg_like_comment"
        />

    <TextView
        android:id="@+id/text_like_count"
        android:layout_width="50dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:alpha="0.7"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/ic_like"
        app:layout_constraintTop_toTopOf="@+id/bg_like_comment"
        app:layout_constraintBottom_toBottomOf="@+id/bg_like_comment"
        />

    <ImageView
        android:id="@+id/ic_comment"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="228dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toStartOf="@+id/bg_like_comment"
        app:layout_constraintTop_toTopOf="@+id/bg_like_comment"
        app:layout_constraintBottom_toBottomOf="@+id/bg_like_comment"
        />

    <TextView
        android:id="@+id/text_comment"
        android:layout_width="50dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:text="评论"
        android:textColor="@color/black"
        android:alpha="0.7"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/ic_comment"
        app:layout_constraintTop_toTopOf="@+id/ic_comment"
        app:layout_constraintBottom_toBottomOf="@+id/ic_comment"
        />

    <FrameLayout
        android:id="@+id/fl_media_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:layout_constraintBottom_toTopOf="@+id/bg_like_comment"
        />

</androidx.constraintlayout.widget.ConstraintLayout>