<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    >

    <TextView
        android:id="@+id/bg_login"
        android:layout_width="0dp"
        android:layout_height="171dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_white_r12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:alpha="0.06"
        app:layout_constraintStart_toStartOf="@+id/bg_login"
        app:layout_constraintEnd_toEndOf="@+id/bg_login"
        app:layout_constraintTop_toTopOf="@+id/bg_login"
        android:background="@drawable/circle_shape" />

    <TextView
        android:id="@+id/text_username"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:text="请先登录"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/bg_login"
        app:layout_constraintEnd_toEndOf="@+id/bg_login"
        app:layout_constraintTop_toBottomOf="@+id/img_avatar"
        />

    <TextView
        android:id="@+id/text_fan"
        android:layout_width="84dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:alpha="0.6"
        android:gravity="center"
        android:text="点击头像去登陆"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/bg_login"
        app:layout_constraintEnd_toEndOf="@+id/bg_login"
        app:layout_constraintTop_toBottomOf="@+id/text_username"
        />

    <TextView
        android:id="@+id/text_mine"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:text="登陆后查看"
        android:gravity="center"
        android:textColor="@color/black"
        android:alpha="0.4"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_login"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout >